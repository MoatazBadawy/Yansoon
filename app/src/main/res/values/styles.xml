<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F8C822</item>
        <item name="colorPrimaryDark">@color/color_transparen</item>
        <item name="colorAccent">#F8C822</item>
    </style>

    <!--Custom the text on Bottom Navigation-->
    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Make the text on TabLayout bold and set the text size-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
